<% include ./partials/header %>

    <!-- Header -->
    <header>
        <div class="container" style="margin-top: -8%;">
            <div class="intro-text">
                <div class="intro-heading" style="font-size:60px; margin-bottom: 2%;">COLLEGE ADMISSIONS MENTORS FOR AFRICA</div>
            </div>
    </header>


    <!-- Team Section -->

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">THE EXECUTIVE TEAM</h2>
                    <h3 class="section-subheading text-muted">Meet CAMA's Executive Team.</h3>
                </div>
            </div>


<div class="card-container">
                 <!-- For Loop To Stored output THE Mentors -->
 <% for(var counter = 0 ; counter < executiveBoardList.length ; counter++ ) { %>

   <div class="" style="width: 33%; margin-left:0%; display:inline-block; margin-bottom:2%; margin-top:0.5%;">

       <div class="card-container" style=" padding:5%;" >

           <img class="card-img-top img-responsive img-circle" src="<%= executiveBoardList[counter].image %>" width="260px" height="260px" alt="Card image cap">

               <div class="card-body">
                   <h4> <%=executiveBoardList[counter].name %> </h4>
                   <p class="text-muted"><strong><%= executiveBoardList[counter].country %></strong></p>
                   <strong><h4><%= executiveBoardList[counter].responsibility %></h4></strong>
                   <% if(executiveBoardList[counter].bio && executiveBoardList[counter].bio.length > 0) { %>

                     <p class="text-muted" align="justify"> <%= executiveBoardList[counter].bio.substring(0, 150) %>.....</p>
                     <button type="button" class="btn btn-warning" data-toggle="collapse" data-target="#<%= executiveBoardList[counter].name %>">Read More</button>
                     <div id="<%= executiveBoardList[counter].name %>" class="collapse">
                       <p align="justify"><%= executiveBoardList[counter].bio %></p>
                     </div>

                     <% } %>
               </div>
       </div>

   </div>

<% }  %>

</div>

<% include ./partials/footer %>
