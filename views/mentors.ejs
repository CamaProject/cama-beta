<% include ./partials/header %>


<!-- EJS For Mentors -->
    <!-- Team Section -->

<div class="mentors-row-container">
    <div class="card-container">
          <div class="row">
              <div class="col-lg-12 text-center">
                  <h2 class="section-heading">Our Amazing Community</h2>
                  <h3 class="section-subheading text-muted">CAMA's Community of Mentors, Professionals, and Project Ideators.</h3>
              </div>
          </div>
     </div>

         <div class="card-container">
                          <!-- For Loop To Stored output THE Mentors -->
          <% var StartCounter=0 %>
          <% var LimitCounter=2 %>

<% for (var i = 0; i<(Math.ceil(mentorList.length/3)); i++) {%>
        <div class="row">


          <% if (LimitCounter < mentorList.length){ %>
          <% for(var counter = StartCounter ; counter <= LimitCounter ; counter++ ) { %>

            <div class="col-md-4" style="margin-bottom:5%;">

                <div class="card-container" style=" padding:5%;" >
                  <img class="card-img-top img-circle" src="<%=mentorList[counter].image%>" height="220px" width="200px" alt="Card image cap" style="margin-bottom:10%;">

                        <div class="card-body">
                        <% console.log(counter) %>
                            <h4> <%=mentorList[counter].name %> </h4>
                            <p class="text-muted"><strong><%= mentorList[counter].country %></strong></p>

                            <% if(mentorList[counter].bio && mentorList[counter].bio.length > 0) { %>

                              <p class="text-muted" align="justify"> <%= mentorList[counter].bio.substring(0, 150) %>.....</p>

                              <!-- Button trigger modal -->
                              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#<%= mentorList[counter].name %>">
                                Read All
                              </button>

                              <!-- Modal -->
                              <div class="modal fade" id="<%= mentorList[counter].name %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="filter: brightness(200%)">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <img class="card-img-top img-circle" src="<%=mentorList[counter].image%>" height="280px" width="250px" alt="Card image cap" style="margin-bottom:10%; margin-left:25%;">

                                      <h5 class="modal-title" id="exampleModalLongTitle" style="margin-left:42%;"><%= mentorList[counter].name %></h5>

                                    </div>
                                    <div class="modal-body">
                                      <p align="justify" style="color:black; font-weight:bold;"><%= mentorList[counter].bio %></p>
                                    </div>
                                  </div>
                                </div>
                              </div>


                              <% } %>
                        </div>
                </div>

            </div>

         <% }  %>
         <% } %>


       </div>


  <% StartCounter= StartCounter+3  %>
  <% LimitCounter=LimitCounter+3 %>




<% } %>

<% if((mentorList.length)%3 !=0) { %>

<div class="row">


  <% for(var counter = 18 ; counter <= 19 ; counter++ ) { %>

    <div class="col-md-4" style="margin-bottom:5%;">

        <div class="card-container" style=" padding:5%;" >
          <img class="card-img-top img-circle" src="<%=mentorList[counter].image%>" height="220px" width="200px" alt="Card image cap" style="margin-bottom:10%;">

                <div class="card-body">
                    <h4> <%=mentorList[counter].name %> </h4>
                    <p class="text-muted"><strong><%= mentorList[counter].country %></strong></p>

                    <% if(mentorList[counter].bio && mentorList[counter].bio.length > 0) { %>

                      <p class="text-muted" align="justify"> <%= mentorList[counter].bio.substring(0, 150) %>.....</p>

                      <!-- Button trigger modal -->
                      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#<%= mentorList[counter].name %>">
                        Read All
                      </button>

                      <!-- Modal -->
                      <div class="modal fade" id="<%= mentorList[counter].name %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="filter: brightness(200%)">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <img class="card-img-top img-circle" src="<%=mentorList[counter].image%>" height="280px" width="250px" alt="Card image cap" style="margin-bottom:10%; margin-left:25%;">

                              <h5 class="modal-title" id="exampleModalLongTitle" style="margin-left:42%;"><%= mentorList[counter].name %></h5>

                            </div>
                            <div class="modal-body">
                              <p align="justify" style="color:black; font-weight:bold;"><%= mentorList[counter].bio %></p>
                            </div>
                          </div>
                        </div>
                      </div>


                      <% } %>
                </div>
        </div>

    </div>

 <% }  %>



</div>

<% } %>

        </div>
</div>





