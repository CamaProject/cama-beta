<% include ./partials/header %>

    <!-- Header -->
    <header>
        <div class="container" style="margin-top: -8%;">
            <div class="intro-text">
                <div class="intro-heading" style="font-size:60px; margin-bottom: 2%;">COLLEGE ADMISSIONS MENTORS FOR AFRICA</div>
            </div>
        </div>
    </header>


    <!-- Team Section -->

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">THE EBOARD TEAM</h2>
                    <h3 class="section-subheading text-muted">Meet CAMA's EBoard Team.</h3>
                </div>
            </div>

 <div class="card-container">
                  <!-- For Loop To Stored output THE EBOARD Members -->
                  <% var StartCounter=0 %>
                  <% var LimitCounter=2 %>

                  <% for (var i = 0; i<(Math.ceil(executiveBoardList.length/3)); i++) {%>
 <div class="row">

  <% for(var counter = StartCounter ; counter <=LimitCounter ; counter++ ) { %>
<% if(executiveBoardList[counter].position == "executive") { %>

    <div class="col-md-4" style="margin-bottom:5%;">

        <div class="card-container" style=" padding:5%;" >
          <img class="card-img-top img-circle" src="<%=executiveBoardList[counter].image%>" height="220px" width="230px" alt="Card image cap" style="margin-bottom:10%;">

                <div class="card-body">
                    <h4> <%=executiveBoardList[counter].name %> </h4>
                    <p class="text-muted"><strong><%= executiveBoardList[counter].country %></strong></p>
                    <p style="font-weight:bold;" > <%=executiveBoardList[counter].responsibility %> <p>


                    <% if(executiveBoardList[counter].bio && executiveBoardList[counter].bio.length > 0) { %>

                      <p class="text-muted" align="justify"> <%= executiveBoardList[counter].bio.substring(0, 150) %>.....</p>
                      <!-- Button trigger modal -->
                      <button type="button" class="btn btn-primary" id="buttonny" data-toggle="modal" data-target="#<%= executiveBoardList[counter].name %>">
                        Read All
                      </button>

                      <!-- Modal -->
                      <div class="modal fade" id="<%= executiveBoardList[counter].name %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true" style="filter: brightness(200%);">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <img class="card-img-top img-circle" src="<%=executiveBoardList[counter].image%>"  height="280px" width="300px" alt="Card image cap" style="margin-bottom:10%; margin-left:25%;">

                              <h5 class="modal-title" id="exampleModalLongTitle" style="margin-left:42%;"><%= executiveBoardList[counter].name %></h5>

                            </div>
                            <div class="modal-body">
                              <p align="justify" style="color:black; font-weight:bold;" ><%= executiveBoardList[counter].bio %></p>
                            </div>
                          </div>
                        </div>
                      </div>

                      <% } %>
                </div>
        </div>

    </div>

    <% }  %>

    <% }  %>

 </div>


 <% StartCounter= StartCounter+3  %>
 <% LimitCounter=LimitCounter+3 %>





<% } %>


</div>

<% include ./partials/footer %>
